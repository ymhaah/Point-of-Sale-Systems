{
  "extends": [
    "development"
  ],
  "hints": {
    "detect-css-reflows/composite": "off",
    "detect-css-reflows/layout": "off",
    "detect-css-reflows/paint": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "img[loading]"
        ]
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "user-select",
          "appearance",
          "overscroll-behavior",
          "scroll-behavior",
          "backface-visibility",
          "aspect-ratio",
          "width: fit-content",
          "height: fit-content",
          "overflow-x: clip"
        ]
      }
    ],
    "no-inline-styles": "off"
  }
}